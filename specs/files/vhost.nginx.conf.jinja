server {
    listen        80;
    server_tokens off;
    server_name   specs.{{ tld }};
    return        301 https://specs.{{ tld }}$request_uri;
}

server {
  server_name specs.{{ tld }};
  listen      443 ssl spdy;

  include     common_params;
  include     ssl_params;

  ssl                 on;
  ssl_certificate     /etc/ssl/webplatform/public_default_201407.pem;
  ssl_certificate_key /etc/ssl/webplatform/201407.key;

  index		    index.html;
  root		    /srv/webplatform/specs;

  # Should work fine, adjust with Robin #TODO
  location    /hook {
    proxy_pass http://{{ publican_backend_host }}:{{ publican_backend_port }};
  }

  location    / {
    try_files $uri $uri/ =404;
  }
}
