export OS_AUTH_URL=https://keystone.dream.io/v2.0
export OS_TENANT_ID="{{ salt['pillar.get']('accounts:tenant:staging:id', '') }}"
export OS_TENANT_NAME="{{ salt['pillar.get']('accounts:tenant:staging:name', '') }}"
export OS_USERNAME="{{ salt['pillar.get']('accounts:tenant:staging:username', '') }}"
export OS_PASSWORD="{{ salt['pillar.get']('accounts:tenant:staging:password', '') }}"
