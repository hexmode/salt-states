[gerrit]
	basePath = git
	canonicalWebUrl = <%= url %>
[core]
	packedGitOpenFiles = 4096
	packedGitLimit = 500m
	packedGitWindowSize = 16k
	streamFileThreshold = 100m
[database]
	type = MYSQL
	hostname = <%= dbhost %>
	database = <%= dbname %>
	username = <%= dbuser %>
	url = jdbc:mysql://<%= dbhost %>/<%= dbname %>?characterSetResults=utf8&characterEncoding=utf8&connectionCollation=utf8_unicode_ci
[auth]
	type = OPENID
	#cookieSecure = true
[sendemail]
	smtpServerPort = 25
	smtpServer = 127.0.0.1
[container]
	user = gerrit2
	javaHome = /usr/lib/jvm/java-6-openjdk-amd64/jre
	heapLimit = 2g
[sshd]
	listenAddress = *:29418
	threads = 8
	batchThreads = 2
[httpd]
	listenUrl = proxy-http://127.0.0.1:8080/r/
[cache]
	directory = cache
[cache "web_sessions"]
	maxAge = 90 days
[gitweb]
	cgi = /usr/lib/cgi-bin/gitweb.cgi
	url = /r/gitweb
[user]
	email = gerrit@webplatform.org
[commentlink "changeid"]
	match = (I[0-9a-f]{8,40})
	link = "#q,$1,n,z"
[commentlink "commit"]
	match = \\b([0-9a-f]{40})\\b
	link = "#q,$1,n,z"
[commentlink "bugzilla"]
	match = "\\b([bB][uU][gG]\\s+#?)(\\d+)\\b"
	link = https://www.w3.org/Bugs/Public/$2
[mimetype "image/*"]
	safe = true
[repository "*"]
	ownerGroup = Project and Group Creators
[pack]
	deltacompression = true
[theme]
	backgroundColor = fff
	topMenuColor = fff
	trimColor = eee
	selectionColor = d8edf9
