server {
    listen         80 default_server;

    include        common_params;
    root           /var/www;

    try_files      $uri $uri/ =404;

    # ref: http://nginx.org/en/docs/http/ngx_http_stub_status_module.html
    location ~ /(nginx-)?status {
        access_log     off;
        allow          127.0.0.1;
        allow          127.0.1.1;
        allow          10.10.10.0/24;
        deny           all;
        stub_status    on;
    }

    include /etc/nginx/status.d/*.conf;
}

