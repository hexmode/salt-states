server {
    listen        80;
    server_name   _;
    include      common_params;

    # ref: http://nginx.org/en/docs/http/ngx_http_stub_status_module.html
    location ~ /(nginx-)?status {
        access_log     off;
        allow          127.0.0.1;
        allow          127.0.1.1;
        allow          10.10.10.0/24;
        deny           all;
        stub_status    on;
    }

    include /etc/nginx/status.d/*.conf;
}

