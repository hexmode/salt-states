# Managed by Salt stack, do NOT EDIT manually!

pillar_roots:
  base:
    - /srv/pillar
    - /srv/private/pillar

#
# We should get the same formulas as we would get in vagrant-workbench
# reading the 'basesystem:salt:formulas_repos' pillar
#
# Leave the list below in place, our highstate should manage it.
#
# Idea is that this list should be the same list of formulas
# either using gitfs_remotes (production) or file_roots
# from a vagrant workbench
#
{% if grains['biosversion'] == 'VirtualBox' %}
file_roots:
  base:
    - /srv/salt
    - /srv/local/states
{% else %}
file_roots:
  base:
    - /srv/salt
{% endif %}
