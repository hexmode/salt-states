<IfModule mod_ssl.c>
  <VirtualHost _default_:443>
    ServerAdmin 	hostmaster@webplatform.org
    ServerName		webplatform.org
    ServerAlias 	webplatformstaging.org

    DocumentRoot	/var/www

    <Directory />
      AllowOverride None
      Require all granted
    </Directory>
    <Directory /var/www>
      AllowOverride None
      Require all granted
    </Directory>
    <Directory /var/www/.well-known>
      Options -Indexes
      AllowOverride None
      Require all granted
    </Directory>

    ErrorLog /var/log/apache2/ssl_error.log
    LogLevel warn
    CustomLog /var/log/apache2/ssl_access.log combined

    SSLEngine on
    SSLCertificateFile      /etc/ssl/webplatform/public_default_201407.pem
    SSLCertificateKeyFile   /etc/ssl/webplatform/201407.key

    # Error pages
    ErrorDocument 404 /errors/404.html
    ErrorDocument 503 /errors/503.html
    ErrorDocument 500 /errors/500.html
    ErrorDocument 403 /errors/403.html
  </VirtualHost>
</IfModule>
