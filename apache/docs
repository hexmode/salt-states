<VirtualHost *:80>
  ServerAdmin 	hostmaster@webplatform.org
  ServerName  	docs.webplatform.org
  ServerAlias 	docs.webplatformstaging.org

  DocumentRoot 	/var/www

  <Directory />
    Options FollowSymLinks
    AllowOverride None
    Require all granted
  </Directory>
  <Directory /var/www>
    Options FollowSymLinks
    AllowOverride None
    Order allow,deny
    Allow from all
    Require all granted
  </Directory>
  <Directory /srv/webplatform/wiki/wptestwiki/mediawiki/extensions/WebPlatformDocs/skin>
      Options FollowSymLinks
      AllowOverride None
      Require all granted
  </Directory>
  <Directory /srv/webplatform/wiki/wptestwiki/mediawiki>
      Require all granted
  </Directory>
  <Directory /srv/webplatform/wiki/wpwiki/mediawiki/extensions/WebPlatformDocs/skin>
      Options FollowSymLinks
      AllowOverride None
      Require all granted
  </Directory>
  <Directory /srv/webplatform/wiki/images>
    Options -Indexes
    Require all granted
  </Directory>
  <Directory /srv/webplatform/wiki/wpwiki/mediawiki>
      Require all granted
  </Directory>
  <Directory /srv/webplatform/compat>
      Require all granted
  </Directory>

  <Directorymatch "^/.*/\.git/">
    Order deny,allow
    Deny from all
  </Directorymatch>

  <FilesMatch "\.(ttf|otf|eot)$">
    <IfModule mod_headers.c>
      Header set Access-Control-Allow-Origin "*"
    </IfModule>
  </FilesMatch>
  <IfModule mod_headers.c>
    Header add Access-Control-Allow-Origin "*"
  </IfModule>

  # Possible values include: debug, info, notice, warn, error, crit, alert, emerg
  LogLevel warn
  ErrorLog syslog:local1

  RewriteEngine On
  RewriteCond %{REQUEST_URI}                       !^/(wiki|w|test|t|compat)/
  RewriteCond %{DOCUMENT_ROOT}/%{REQUEST_FILENAME} !-f
  RewriteRule ^/wiki$                              /w/index.php [R=301]
  RewriteRule ^/test$                              /t/index.php [R=301]

  Alias /test                "/srv/webplatform/wiki/wptestwiki/mediawiki/index.php"
  Alias /t/skins/webplatform "/srv/webplatform/wiki/wptestwiki/mediawiki/extensions/WebPlatformDocs/skin"
  Alias /t                   "/srv/webplatform/wiki/wptestwiki/mediawiki"

  Alias /wiki                "/srv/webplatform/wiki/wpwiki/mediawiki/index.php"
  Alias /w/skins/webplatform "/srv/webplatform/wiki/wpwiki/mediawiki/extensions/WebPlatformDocs/skin"
  Alias /w/images            "/srv/webplatform/wiki/images"
  Alias /w                   "/srv/webplatform/wiki/wpwiki/mediawiki"

  Alias /compat /srv/webplatform/compat

  RedirectMatch permanent ^/wiki/(.+)/$ /wiki/$1
  RedirectMatch permanent ^/test/(.+)/$ /test/$1
  RedirectMatch permanent ^/$           /wiki/

  ErrorDocument 404 /errors/404.html
  ErrorDocument 503 /errors/503.html
  ErrorDocument 403 /errors/403.html
</VirtualHost>
