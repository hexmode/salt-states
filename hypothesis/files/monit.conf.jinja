check host elasticsearch-remote with address "localhost"
  if failed port 9200 protocol HTTP
    request "/_aliases"
    with timeout 10 seconds
    then alert
 
check host hypothesis-service with address "localhost"
  start program = "/usr/sbin/service hypothesis start"
  stop program = "/usr/sbin/service hypothesis stop"
  if failed port 5000 protocol HTTP
    request /
    with timeout 10 seconds
    then restart
 
check process nginx with pidfile /var/run/nginx.pid
  group www
  group nginx
  start program = "/etc/init.d/nginx start"
  stop program = "/etc/init.d/nginx stop"
  if failed port 80 protocol http request "/" then restart
  if 5 restarts with 5 cycles then timeout
  depend nginx_bin
  depend nginx_rc
 
check file nginx_bin with path /usr/sbin/nginx
  group nginx
  include /etc/monit/templates/rootbin
 
check file nginx_rc with path /etc/init.d/nginx
  group nginx
  include /etc/monit/templates/rootbin
